			if (CUR_PWD_HASH_ALG = 0 || CUR_ENC_ALG = 0)
				return 0

			if !dllCall("Advapi32\CryptAcquireContextW","Ptr*",hCryptProv,"Uint",0,"Uint",0,"Uint",c.PROV_RSA_AES,"UInt",c.CRYPT_VERIFYCONTEXT)
